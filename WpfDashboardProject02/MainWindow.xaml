                        <TextBlock Text="Real-Time Correlation" HorizontalAlignment="Center" FontSize="15"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <GroupBox Header="Correlate 1" Margin="10">
                                <StackPanel Orientation="Vertical">
                                <RadioButton Name="rbCor10" Content="Signal 0" IsChecked="True" GroupName="Correlate1"/>
