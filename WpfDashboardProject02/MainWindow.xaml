                            <Image Name="colorImageBiometricTab" Width="1920" Height="1080"/>
                        </Viewbox>
                        <Viewbox>
                            <Image Name="bodyImageBiometricTab" Width="1920" Height="1080"/>
                        </Viewbox>
                        <Viewbox>
                            <Image Name="faceTrackImageBiometricTab"/>
                        </Viewbox>
                    </Grid>

                    <lvc:CartesianChart Grid.Row="0" Grid.Column="2" Name="MyChart0"
                                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  
                                        Series="{Binding mySeriesCollection0}" LegendLocation="None" 
                                        Hoverable="False" DataTooltip="{x:Null}" DisableAnimations="True" 
                                        Margin="10" />

                    <lvc:CartesianChart Grid.Row="1" Grid.Column="2" Name="MyChart1"
                                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  
                                        Series="{Binding mySeriesCollection1}" LegendLocation="None" 
                                        Hoverable="False" DataTooltip="{x:Null}" DisableAnimations="True" 
                                        Margin="10" />

                    <lvc:CartesianChart Grid.Row="2" Grid.Column="2" Name="MyChart2"
                                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  
                                        Series="{Binding mySeriesCollection2}" LegendLocation="None" 
