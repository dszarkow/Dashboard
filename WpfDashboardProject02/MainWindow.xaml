                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="Kinect V2" Foreground="Black" HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="DarkGray">
                    <DockPanel>

                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label Name="statusLabel" Content ="Status Label" FontSize="15" FontWeight="Normal" Margin="0,0,10,0" MinWidth="200"/>
                            <Label Name="frameRateLabel" Content ="Frame Rate (f/sec)" FontSize="15" FontWeight="Normal" Margin="0,0,5,0" />
                            <ProgressBar Name="frameRateBar" Height="20" Width="150"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             Minimum="0" Maximum="40"/>
                        </StackPanel>

                        <Grid DockPanel.Dock="Bottom" Background="DarkGray">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel  Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Orientation="Horizontal">
                                <Button Content="Front" Height="30" Name="buttonFront" Width="100" Margin="5" Click="buttonFront_Click" />
                                <Button Content="Top" Height="30" Name="buttonTop" Width="100" Margin="5" Click="buttonTop_Click" />
                                <Button Content="Left" Height="30" Name="buttonLeft" Width="100" Margin="5" Click="buttonLeft_Click" />
                                <Button Content="Reset" Visibility="Collapsed"  Height="30" Name="buttonReset" Width="100" Margin="5" Click="buttonReset_Click" />
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <CheckBox Name="cbJoints" Content="Joints" Margin="5,0,0,0" IsChecked="True"></CheckBox>
                                    <CheckBox Name="cbBones" Content="Bones" Margin="5,0" IsChecked="True"></CheckBox>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Orientation="Horizontal">
                                <Button Content="Color" Height="30" Name="buttonColor" Width="100" Margin="5" Click="buttonColor_Click" />
                                <Button Content="Depth" Height="30" Name="buttonDepth" Width="100" Margin="5" Click="buttonDepth_Click" />
